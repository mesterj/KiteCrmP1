<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kite.joco.kitecrmp1.activities.NewContactActivity">

    <!--Alapadatok egy layout, név , beosztás, egy telefon, egy email.
     Ha többet akar hozzáadni az dialogfragmentben lesz külön felugróban-->

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKapcsNev"
            android:text="@string/nevcaptiontext"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.4"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:id="@+id/etKapcsolatNev"
            android:layout_width="0dp"
            android:singleLine="true"
            android:maxLines="1" />

    </LinearLayout>

        <TextView
            android:text="Beosztás: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnKapcsolatBeosztas"/>



</LinearLayout>
